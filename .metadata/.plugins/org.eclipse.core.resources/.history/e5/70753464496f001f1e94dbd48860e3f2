package chapter14.view;

import java.util.Scanner;

public class OrderView {
	// 사용자로부터 주문을 받는 로직
	private Scanner sc = new Scanner(System.in);
	
	// 메뉴 선택을 사용자에게 요청하는 메서드
	public String getUserChoice() {
		System.out.println("==================");
		System.out.println("Select an option");
		return sc.nextLine();
	}
}
